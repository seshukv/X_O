<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".homepage">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="TIC TAC TOE"
        android:textAlignment="center"
        android:textColor="#B71C1C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/roundbutt"
        android:text="Single Game"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundbutt"
        android:text="Tournament"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <TextView
        android:id="@+id/b3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundbutt"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/b2"
        app:layout_constraintRight_toLeftOf="@id/b4"

        app:layout_constraintTop_toBottomOf="@id/b2" />

    <TextView
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/roundbutt"
        android:text="7"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/b3"
        app:layout_constraintRight_toLeftOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@id/b2" />

    <TextView
        android:id="@+id/b5"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundbutt"
        android:text="9"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/b4"
        app:layout_constraintRight_toRightOf="@id/b2"
        app:layout_constraintTop_toBottomOf="@id/b2" />

</androidx.constraintlayout.widget.ConstraintLayout>